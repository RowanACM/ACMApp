<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Notifications">

        <CheckBoxPreference
            android:key="meeting_reminders"
            android:defaultValue="true"
            android:title="Meeting Reminders"
            android:summary="Get reminded about upcoming meetings" />

        <CheckBoxPreference
            android:key="announcement_notifications"
            android:defaultValue="true"
            android:title="Announcements"
            android:summary="Get announcements from your committee" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Feedback">

        <PreferenceScreen
            android:title="Enjoying the app?"
            android:summary="Rate on the Play Store">

            <intent android:action="android.intent.action.VIEW"
                    android:data="@string/play_store_url" />

        </PreferenceScreen>


    </PreferenceCategory>

    <PreferenceCategory
        android:title="Google">

        <PreferenceScreen
            android:key="google_sign_out"
            android:title="Sign Out">

        </PreferenceScreen>


    </PreferenceCategory>

    <PreferenceCategory
        android:title="About">

        <PreferenceScreen
            android:title="This app is open source"
            android:summary="View the code on Github">

            <intent android:action="android.intent.action.VIEW"
                    android:data="https://github.com/RowanACM/ACMAppAndroid" />

        </PreferenceScreen>

        <PreferenceScreen
            android:title="Changelog">

            <intent android:action="android.intent.action.VIEW"
                    android:data="https://github.com/RowanACM/ACMAppAndroid/commits" />

        </PreferenceScreen>

        <PreferenceScreen
            android:key="licenses"
            android:title="View licenses"
            android:summary="View the licenses used">
        </PreferenceScreen>

        <PreferenceScreen
            android:title="Privacy Policy">

            <intent android:action="android.intent.action.VIEW"
                    android:data="@string/privacy_policy_url" />

        </PreferenceScreen>

        <PreferenceScreen
            android:key="app_info"
            android:title="@string/app_name">
        </PreferenceScreen>


    </PreferenceCategory>

</PreferenceScreen>