<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.us.acm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service android:name="org.rowanacm.android.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


        <activity
            android:name="org.rowanacm.android.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="org.rowanacm.android.MainTabActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.rowanacm.android.MainTabActivity" />

            </activity>

        <activity
            android:name="org.rowanacm.android.MainTabActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.rowanacm.android.annoucement.AnnouncementActivity"
            android:label="@string/title_activity_announcement"
            android:parentActivityName="org.rowanacm.android.MainTabActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.rowanacm.android.MainTabActivity" />
        </activity>
        <activity
            android:name="org.rowanacm.android.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="org.rowanacm.android.MainTabActivity"
            android:theme="@style/AppTheme.MaterialAboutActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.rowanacm.android.MainTabActivity" />
        </activity>
    </application>

</manifest>