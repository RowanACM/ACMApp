<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="org.rowanacm.android.MainActivity">

    <RelativeLayout
        android:id="@+id/attendance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/attendance_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Attendance"/>

        <Button
            android:id="@+id/account_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/attendance_textview"
            android:layout_centerHorizontal="true"
            android:text="Account sign in"/>

        <Button
            android:id="@+id/attendance_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_button"
            android:layout_centerHorizontal="true"
            android:text="Meeting sign in"/>




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/attendance_layout">

        <TextView
            android:id="@+id/about_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is ACM?"/>


        <TextView
            android:id="@+id/slack_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_text_view"
            android:visibility="gone"/>

        <Button
            android:id="@+id/slack_sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/slack_textview"
            android:layout_toRightOf="@id/slack_textview"
            android:visibility="gone"/>




    </RelativeLayout>




</RelativeLayout>
