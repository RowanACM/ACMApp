<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/prompt_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/author"/>

    <TextView
        android:id="@+id/prompt_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_below="@+id/prompt_author"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/subject"/>

    <TextView
        android:id="@+id/prompt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/prompt_subject"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="20sp"
        android:text="@string/text"/>

    <TextView
        android:id="@+id/prompt_committee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/prompt_text"
        android:textSize="20sp"
        android:text="@string/committee"/>

    <EditText
        android:id="@+id/author_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/prompt_author"
        android:layout_alignTop="@id/prompt_author"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true"/>


    <EditText
        android:id="@+id/subject_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/prompt_subject"
        android:layout_alignTop="@id/prompt_subject"
        android:inputType="textCapWords"
        android:layout_alignParentRight="true"/>


    <EditText
        android:id="@+id/message_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/prompt_text"
        android:layout_alignTop="@id/prompt_text"
        android:inputType="text"
        android:layout_alignParentRight="true"/>

    <Spinner
        android:id="@+id/committee_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/prompt_committee"
        android:layout_alignTop="@id/prompt_committee"
        android:layout_alignParentRight="true"/>




</RelativeLayout>